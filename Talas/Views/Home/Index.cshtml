@using Objects

@{
    ViewBag.Title = "Main Page";
}


<div class="row main">
    <div class="col-md-2"><h3 align="left">TALAS</h3><h4 align="left">MONITORING</h4></div>
    <div class="col-md-8">
        <span class="CharOverride-36">@ViewBag.Greeting</span>
        <span class="spanLabelAlert">@Ajax.ActionLink("New alerts &" + "\n" + "notification", "", new AjaxOptions { UpdateTargetId = "content", Url = "/Engine/Messages?showAll=1" })</span>
        <label class="CharOverride-24 labelAlert">0</label>       
    </div>
        
    <div class="col-md-2">
        <button type="button" data-toggle="dropdown" class="btn btn-user dropdown-toggle"><span class="caret"></span> UserName </button>
        <ul class="dropdown-menu ">
            <li>
                <a href="#">Settings</a>
            </li>
            <li>
                <a href="#">Log out</a>
            </li>
        </ul>
    </div>

</div>
<div class="row main-body">
    <div class="col-md-2">
        <ul class="nav nav-stacked">
            <li class="buttonNav">
                @Ajax.ActionLink("Dashboard", "Index", new AjaxOptions { UpdateTargetId = "content", Url = "/Home/Engine"})
            </li>
        </ul>
    </div>
    <div class="col-md-8 tables" id="content">
          
    </div>

    <div class="col-md-2">UserInfo</div>
</div>

@section Footer{
    <footer class="footer"></footer>
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/TalasJS.js")
    @Scripts.Render("~/Scripts/Highcharts-4.0.1/js/highcharts.js")
}






